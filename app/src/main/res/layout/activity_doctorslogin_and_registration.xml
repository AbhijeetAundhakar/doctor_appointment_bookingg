<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".doctorsloginAndRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayoutAnim2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_doctors_mainpage"
                android:fontFamily="times"
                android:textSize="30sp"
                android:textColor="#591EFF"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/doctorfrontimg"
                android:layout_marginBottom="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signUpAsDoctorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="times"
                android:paddingLeft="50dp"
                android:background="@drawable/doctors_signup_signin_three_button_design"
                android:textColor="@color/white"
                android:paddingRight="50dp"
                android:text="@string/signup_as_doctor"
                android:textFontWeight="600"
                android:textSize="17dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/doctorSignInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="times"
                android:paddingLeft="65dp"
                android:background="@drawable/doctors_signup_signin_three_button_design"
                android:textColor="@color/white"
                android:paddingRight="65dp"
                android:text="@string/doctor_sign_in"
                android:textStyle="bold"
                android:textSize="17sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/medicineOwnerButton"
                android:layout_width="wrap_content"
                android:paddingLeft="58dp"
                android:paddingRight="58dp"
                android:background="@drawable/doctors_signup_signin_three_button_design"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:fontFamily="times"
                android:text="@string/medicineowner"
                android:textStyle="bold"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>